@model DetectiveGame.Areas.Team.Pages.IndexModel
@{
}
<h3>You can <a asp-area="Team" asp-page="./Create">create</a> your own team or join existing one:</h3>

<table class="table table-striped table-sm">
	<thead class="thead-dark">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Teams)
			</th>
			<th class="text-end">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var team in Model.Teams)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => team.Name)
				</td>
				<td align="right">
					<a class="btn btn-outline-primary" asp-route-id="@team.Id" asp-area="Team" asp-page="./Join">Join</a>
				</td>
			</tr>
		}
	</tbody>
</table>