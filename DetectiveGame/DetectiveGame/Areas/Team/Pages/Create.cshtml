@page
@model DetectiveGame.Areas.Team.Pages.CreateModel
@{
	ViewData["Title"] = "Create Team";
}

<div class="row">
	<div class="col-md-6">
		<section>
			<form id="team" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="Input.TeamName" class="form-control" autocomplete="username" aria-required="true" />
					<label asp-for="Input.TeamName" class="form-label"></label>
					<span asp-validation-for="Input.TeamName" class="text-danger"></span>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Create Team</button>
				</div>
			</form>
		</section>
	</div>
</div>